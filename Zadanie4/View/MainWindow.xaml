<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zadanie4"
        xmlns:ViewModel="clr-namespace:GUI.ViewModel" x:Class="Zadanie4.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Window.DataContext>
        <ViewModel:CustomerViewModel/>
    </Window.DataContext>
    <Grid>
        <ListView ItemsSource="{Binding Customers}" SelectedItem="{Binding CurrentCustomer}" Margin="0,0,0,150">
            <ListView.View>
                <GridView x:Name="GridView">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Id}" Header="ID"
                                Width="50"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Name}" Header="Name"
                                Width="150"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Surname}" Header="Surname"
                                Width="150"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Get Data" HorizontalAlignment="Left" Margin="42,140,0,0" VerticalAlignment="Top" Width="75" Command="{Binding FetchCustomerCommand}"/>
    </Grid>

</Window>
